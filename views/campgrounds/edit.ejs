<%- layout('layouts/boilerplate') %>

<div class="container">
  <h1 class="heading-2 text-center">Edit Ground</h1>
  <div class="row">
    <div class="col-6 offset-3">
      <div class="card p-5">
        <form
          class="form"
          action="/campgrounds/<%= campground._id %>?_method=put"
          method="POST"
        >
          <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input
              class="form-control"
              type="text"
              name="campground[title]"
              id="title"
              value="<%= campground.title %>"
            />
          </div>
          <div class="mb-3">
            <label class="from-label" for="location">Location</label>
            <input
              value="<%= campground.location %>"
              type="text"
              class="form-control"
              name="campground[location]"
              id="location"
            />
          </div>
          <div class="mb-3">
            <label class="from-label" for="image">Imgae URL</label>
            <input
              value="<%= campground.image %>"
              type="text"
              class="form-control"
              name="campground[image]"
              id="image"
            />
          </div>
          <div class="mb-3">
            <label class="from-label" for="price">Price</label>
            <input
              value="<%= campground.price%>"
              type="number"
              class="form-control"
              name="campground[price]"
              id="price"
            />
          </div>
          <div class="mb-3">
            <label class="from-label" for="description">Description</label>
            <textarea
              type=""
              class="form-control"
              name="campground[description]"
              id="description"
            >
            <%= campground.description %>
            </textarea>
          </div>
          <button class="btn btn-success" type="submit">Save</button>
        </form>
      </div>
    </div>
  </div>
</div>
